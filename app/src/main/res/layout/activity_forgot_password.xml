<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword"
    android:background="#3F51B5">
    <ImageView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:src="@drawable/food1"
        android:layout_marginTop="30dp"
        android:id="@+id/imgLogo1"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your Registered Mobile Number and E-mail below:"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:layout_below="@+id/imgLogo1"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:padding="6dp"
        android:id="@+id/txtEnterMobileAndEmail"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEnterMobileAndEmail"
        android:background="#ffffff"
        android:padding="6dp"
        android:hint="Mobile Number (10digits)"
        android:textColor="#000000"
        android:inputType="phone"
        android:maxLines="1"
        android:maxLength="10"
        android:id="@+id/eForgotMobile"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eForgotMobile"
        android:background="#ffffff"
        android:padding="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/eForgotEmail"
        android:hint="Email Address"
        android:textColor="#000000"
        android:inputType="textEmailAddress"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eForgotEmail"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#1a237e"
        android:text="Next"
        android:textSize="17sp"
        android:padding="6dp"
        android:textColor="#ffffff"
        android:id="@+id/btnNext"/>

</RelativeLayout>